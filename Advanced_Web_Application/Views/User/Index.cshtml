@using Advanced_Web_Application.ViewModels;
@model List<UserViewModel>

@{
    ViewData["Title"] = "Your Users";
}

<div class="album py-5 bg-light">
    <div class="container">

        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
            @foreach(var user in Model)
            {
                <div class="col">
                    <div class="card shadow-sm">
                        <img class="card-img-top" src="@(!string.IsNullOrEmpty(@user.ProfileImageURL) ? @user.ProfileImageURL : "/images/defaultImage.png")" width="100%" height="225" alt="Card Image not found">
                        <div class="card-body">

                            <p class="card-text text-center h4 text-primary">@user.UserName</p>
                            <p class="card-text text-primary" style="font-size:20px">Mileage : @user.Mileage</p>
                            <p class="card-text text-primary" style="font-size:20px">Pace : @user.Pace</p>

                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a class="btn btn-sm btn-outline-primary" style="width:80px;font-size:large"
                                       asp-controller="User" asp-action="Detail" asp-route-id="@user.Id">View</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }

            </div>
        </div>
   </div>