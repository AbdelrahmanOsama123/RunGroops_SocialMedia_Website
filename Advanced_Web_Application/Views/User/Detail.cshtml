@using Advanced_Web_Application.ViewModels;
@model UserDetailViewModel

<!-- Page Content -->
<div class="container">

    <!-- Portfolio Item Heading -->
    <h1 class="my-4 text-primary">
        @Model.FirstName @Model.LastName
    </h1>
    <!-- Portfolio Item Row -->
    <div class="row">
        <div class="col-md-8">
            <img class="img-fluid" src="@(!string.IsNullOrEmpty(@Model.ProfileImageURl) ? @Model.ProfileImageURl: "/images/defaultImage.png")" alt="">
        </div>
            <div class="col-md-4">
                <h3 class="my-3 text-primary">Mileage : @Model.Mileage</h3>
                <h3 class="my-3 text-primary">Pace : @Model.Pace</h3>
                <h3 class="my-3 text-primary">Location</h3>
                <ul>
                    <li class="h4">@Model.Street</li>
                    <li class="h4">@Model.City</li>
                    <li class="h4">@Model.State</li>
                </ul>
            </div>
    </div>
    <!-- /.row -->
    <!-- Related Projects Row -->
    <h3 class="my-4">Related Projects</h3>

    <div class="row">
        
            <div class="col-md-3 col-sm-6 mb-4">
                <a href="#">
                    <img class="img-fluid" src="" alt="">
                </a>
            </div>
        <div class="col-md-3 col-sm-6 mb-4">
            <a href="#">
                <img class="img-fluid" src="" alt="">
            </a>
        </div>
        <div class="col-md-3 col-sm-6 mb-4">
            <a href="#">
                <img class="img-fluid" src="" alt="">
            </a>
        </div>
        
    </div>
    <!-- /.row -->

</div>
<!-- /.container -->
