@using Advanced_Web_Application.ViewModels;
@model DashboardViewModel 

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<h1 class="display-3 fw-normal text-primary offset-3">Your Dashboerd</h1>
<a type="button" class="btn btn-success" asp-controller="Club" asp-action="Create">Create New Club</a>
<a type="button" class="btn btn-success" asp-controller="Race" asp-action="Create">Create New Race</a>
<a type="button" class="btn btn-success" asp-controller="Dashboard" asp-action="EditUserProfile">Edit Your Profile</a>

<div class="album py-5 bg-body-tertiary">
    <div class="container">
        <h1 class="display-4 my-3 text-primary text-center mb-4"> Your Races </h1>
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
            @if (Model.Races.Count() == 0)
            {
                <h1 class="fw-light">
                    There is no Running Races in Your Dashboard <br>
                    <a asp-controller="Race" asp-action="Create">Enter here </a>to Create one!
                </h1>
            }
            @foreach(var Race in Model.Races)
            {
                <div class="col">
                    <div class="card shadow-sm">
                        <img class="card-img-top" src="@Race.Image" height="225" alt="Card Image not found">
                        <div class="card-body">
                            <h1 class="card-text text-primary">@Race.Title</h1>
                            <p class="card-text text-dark h5">@Race.Description</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a class="btn btn-sm btn-outline-primary" style="width:80px;font-size:large"
                                       asp-controller="Race" asp-action="Detail" asp-route-id="@Race.Id">View</a>
                                    <a class="btn btn-sm btn-outline-primary" style="width:80px;font-size:large"
                                       asp-controller="Race" asp-action="Edit" asp-route-id="@Race.Id">Edit</a>
                                    <a class="btn btn-sm btn-outline-primary" style="width:80px;font-size:large"
                                       asp-controller="Race" asp-action="Delete" asp-route-id="@Race.Id">Delete</a>
                                </div>
                                <small class="m-1 text-success h6">@Race.RaceCatagory</small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        <hr style="color:rgb(0,0,0);height:4px;background-color:black">
        <h1 class="display-5 my-3 text-primary text-center mb-4"> Your Clubs </h1>
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
            @if (Model.Clubs.Count() == 0)
            {
                <h1 class="fw-light text-danger">
                    There is no Running Races in Your Dashboard <br>
                    <a asp-controller="Club" asp-action="Create">Enter here </a>to Create one!
                </h1>
            }
            else
            {
                @foreach (var Club in Model.Clubs)
                {
                    <div class="col">
                        <div class="card shadow-sm">
                            <img class="card-img-top" src="@Club.Image" height="225" alt="Card Image not found">
                            <div class="card-body">
                                <h1 class="card-text text-primary">@Club.Title</h1>
                                <p class="card-text card-text text-dark h5">@Club.Description</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group">
                                        <a class="btn btn-sm btn-outline-primary" style="width:80px;font-size:large"
                                           asp-controller="Club" asp-action="Detail" asp-route-id="@Club.Id">View</a>
                                        <a class="btn btn-sm btn-outline-primary" style="width:80px;font-size:large"
                                           asp-controller="Club" asp-action="Edit" asp-route-id="@Club.Id">Edit</a>
                                        <a class="btn btn-sm btn-outline-primary" style="width:80px;font-size:large"
                                           asp-controller="Club" asp-action="Delete" asp-route-id="@Club.Id">Delete</a>
                                    </div>
                                    <small class="m-1 text-success h6">@Club.ClubCatagory</small>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
            
        </div>
    </div>
</div>