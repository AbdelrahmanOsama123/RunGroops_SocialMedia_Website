@using Advanced_Web_Application.Data.Enum;
@using Advanced_Web_Application.ViewModels;
@model CreateRaceViewModel

@{
    ViewData["Title"] = "Create";
}

 <div class="container m-4 p-4">
    <div class="col-md-8">
        <form method="post" asp-action="create" enctype="multipart/form-data">
            <input type="hidden" name="AppUserId" asp-for="AppUserId" />
            <div class="row mb-3">
                <h2 class="mb-1">Create Race</h2>
                <hr />
            </div>

            <div class="form-group mb-2">
                 <label asp-for="Title" class="control-label p-1"></label>
                <input asp-for="Title" class="form-control" placeholder="Enter Title">
                 <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group mb-2">
                <label asp-for="Description" class="control-label p-1"></label>
                <input asp-for="Description" class="form-control" placeholder="Enter Description">
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group mb-2">
                <label asp-for="Address.Street" class="control-label p-1"></label>
                <input asp-for="Address.Street" class="form-control" placeholder="Enter Street">
                <span asp-validation-for="Address.Street" class="text-danger"></span>
            </div>

            <div class="form-group mb-2">
                <label asp-for="Address.City" class="control-label p-1"></label>
                <input asp-for="Address.City" class="form-control" placeholder="Enter City">
                <span asp-validation-for="Address.City" class="text-danger"></span>
            </div>

            <div class="form-group mb-2">
                <label asp-for="Address.State" class="control-label p-1"></label>
                <input asp-for="Address.State" class="form-control" placeholder="Enter State">
                <span asp-validation-for="Address.State" class="text-danger"></span>
            </div>

            <div class="form-group mb-2">
                <label asp-for="RaceCatagory" class="control-label p-1"></label>
                <select asp-for="RaceCatagory" class="form-control" asp-items="@Html.GetEnumSelectList<RaceCatagory>()">
                    <option>--Select--</option>
                </select>
                <span asp-validation-for="RaceCatagory" class="text-danger"></span>
            </div>


            <div class="form-group mb-2">
                <label asp-for="Image" class="control-label p-1"></label>
                <input asp-for="Image" type="file" class="form-control" placeholder="Upload Image">
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <button type="submit" class="btn btn-primary p-1" style="width:150px">Create</button>
                <a class="btn btn-secondary" asp-controller="Race" asp-action="Index" style="width:150px">Back to List</a>
            </div>
        </form>
    </div>
</div>
