@model IEnumerable<Club>
@{
    ViewData["Title"] = "Clubs";
}

<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h1 class="text-primary mb-2">List of Clubs</h1>
        </div>
        @if (User.Identity.IsAuthenticated && User.IsInRole("admin"))
        {
            <div class="col-6 text-end">
                <a style="font-size:24px" asp-controller="Club" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i>&nbsp; Create New Club
                </a>
            </div>
        }
        
    </div>
   <br><br> 
</div>
<div class="album py-5 bg-body-tertiary">
    <div class="container">

        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
            @foreach(var Club in Model)
            {
                <div class="col">
                    <div class="card shadow-sm">
                        <img class="card-img-top" src="@Club.Image" height="225" alt="Card Image not found">
                        <div class="card-body">
                            <h1 class="card-text text-primary">@Club.Title</h1>
                            <p class="card-text text-dark h6">@Club.Description</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a class="btn btn-sm btn-outline-primary" style="width:80px;font-size:large"
                                    asp-controller="Club" asp-action="Detail" asp-route-id="@Club.Id">View</a>
                                    @if(User.Identity.IsAuthenticated && User.IsInRole("admin"))
                                    {
                                        <a class="btn btn-sm btn-outline-primary" style="width:80px;font-size:large"
                                           asp-controller="Club" asp-action="Edit" asp-route-id="@Club.Id">Edit</a>
                                        <a class="btn btn-sm btn-outline-primary" style="width:80px;font-size:large"
                                        asp-controller="Club" asp-action="Delete" asp-route-id="@Club.Id">Delete</a>
                                    }
                                </div>
                                <small class="text-body-secondary">@Club.ClubCatagory</small>
                            </div>
                        </div>
                    </div>
                </div>
            }

            </div>
        </div>
   </div>