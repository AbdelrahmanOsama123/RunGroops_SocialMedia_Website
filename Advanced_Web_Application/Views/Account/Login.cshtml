@using Advanced_Web_Application.ViewModels;
@model LoginViewModel

@{
    <link rel="stylesheet" href="~/css/login&Register.css" />
}

@{
    ViewData["Title"] = "Login";
}

<div class="col-md-6 offset-3">
    <p>
        <h2 class="text-success display-4">Login to Your Account</h2>
    </p>
</div>

<div class="col-md-6 offset-3">
    @if (TempData["Error"] != null)
    {
        <div class="col-md-12 alert alert-danger">
            <span><b>Sorry</b> - @TempData["Error"]</span>
        </div>
    }
</div>

<div class="row">
    <div class="col-md-6 offset-3">
        <form method="post" asp-action="Login" >
            <div class="form-group my-3">
                <label asp-for="EmailAddress" class="label-control text-success"></label>
                <input asp-for="EmailAddress" class="form-control" placeholder="Enter your Email" />
                <span asp-validation-for="EmailAddress" class="text-danger"></span>
            </div>
            <div class="form-group my-3">
                <label asp-for="Password" class="label-control text-success" ></label>
                <input asp-for="Password" class="form-control" placeholder="Enter your Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group mb-5">
                <button type="submit" class="w-25 btn btn-success float right" style="color:white;height: 50px;font-size:25px;border-radius: 25px;">Login</button>
                <a class="w-25 btn btn-secondary float right" style="color:white;height: 50px;font-size:25px;border-radius: 25px;" asp-controller="Account" asp-action="Login">Cancel</a>
            </div>
            <p class="w-100 text-center text-light" style="font-size:25px">&mdash; Or Create New Account &mdash;</p>
            <a asp-controller="Account" asp-action="Register" class="w-75 btn btn-success text-center btn-rounded" style="color:white;height: 50px;font-size:25px;border-radius: 25px;margin-left:70px">Create new account</a>
        </form>
    </div>
</div>